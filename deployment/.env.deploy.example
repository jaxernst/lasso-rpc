# Lasso RPC Deployment Environment Variables
# Copy this file to .env.deploy and fill in your values

# Fly API Token (required)
# Get a BUILD token from https://fly.io/dashboard → Organization → Tokens
# Must have "Build" or "Deploy" scope for remote builder access
export FLY_API_TOKEN=""

# App Configuration
export FLY_APP_NAME="lasso-staging"
export REGIONS="iad"              # Comma-separated list: "iad,sea,ams"
export MACHINE_COUNT="2"          # Machines per region
export VOLUME_SIZE_GB="3"         # Volume size per region

# Phoenix Secret (auto-generated if not set)
# Generate with: mix phx.gen.secret
# export SECRET_KEY_BASE=""

# Provider API Keys (optional - can be added later)
# These are used for ${VAR} expansion in config/chains.yml
# export INFURA_API_KEY=""
# export ALCHEMY_API_KEY=""
# export QUICKNODE_API_KEY=""

# Additional secrets (optional)
# JSON format for custom secrets
# export SECRETS_JSON='{"CUSTOM_KEY":"value"}'
